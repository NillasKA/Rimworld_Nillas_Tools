<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef Name="BaseTool" Abstract="True">
        <category>Item</category>
        <thingClass>ThingWithComps</thingClass>
        <equipmentType>Primary</equipmentType>
        <pathCost>10</pathCost>
        <useHitPoints>True</useHitPoints>
        <selectable>True</selectable>
        <graphicData>
          <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
        </graphicData>
        <drawGUIOverlay>true</drawGUIOverlay>
        <statBases>
          <MaxHitPoints>100</MaxHitPoints>
          <Flammability>0.1</Flammability>
          <DeteriorationRate>1</DeteriorationRate>
          <SellPriceFactor>0.25</SellPriceFactor>
        </statBases>
        <altitudeLayer>Item</altitudeLayer>
        <alwaysHaulable>True</alwaysHaulable>
        <tickerType>Never</tickerType>
        <weaponTags>
          <li>Melee</li>
          <li>Tool</li>
        </weaponTags>
        <thingCategories>
          <li>Tools</li>
        </thingCategories>
        <comps>
          <li Class="CompProperties_Forbiddable" />
          <li>
            <compClass>CompEquippable</compClass>
          </li>
        </comps>
        <inspectorTabs>
          <li>ITab_Art</li>
        </inspectorTabs>
      </ThingDef>

      <ThingDef Name="BaseTool_Forged" ParentName="BaseTool" Abstract="True">
        <stuffCategories>
          <li>Metallic</li>
          <li>Woody</li>
        </stuffCategories>
        <recipeMaker>
          <researchPrerequisite>Smithing</researchPrerequisite>
          <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
          <workSkill>Crafting</workSkill>
          <effectWorking>Smith</effectWorking>
          <soundWorking>Recipe_Smith</soundWorking>
          <recipeUsers>
            <li>ElectricSmithy</li>
            <li>FueledSmithy</li>
          </recipeUsers>
          <unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
          <defaultIngredientFilter>
            <categories>
              <li>Root</li>
            </categories>
            <disallowedThingDefs>
              <li>Silver</li>
              <li>Gold</li>
            </disallowedThingDefs>
          </defaultIngredientFilter>
        </recipeMaker>
        <equippedAngleOffset>-65</equippedAngleOffset>
        <techLevel>Medieval</techLevel>
      </ThingDef>

      <ThingDef Name="BaseTool_Forged_Quality" Abstract="True" ParentName="BaseTool_Forged">
        <comps>
          <li>
            <compClass>CompQuality</compClass>
          </li>
          <li Class="CompProperties_Art">
            <nameMaker>NamerArtWeaponMelee</nameMaker>
            <descriptionMaker>ArtDescription_WeaponMelee</descriptionMaker>
            <minQualityForArtistic>Excellent</minQualityForArtistic>
          </li>
        </comps>
      </ThingDef>

      <ThingDef ParentName="BaseTool_Forged_Quality">
        <defName>Tool_Hatchet</defName>
        <label>hatchet</label>
        <description>Used to cut down trees and plants.</description>
        <graphicData>
          <texPath>Tools/Hatchet</texPath>
          <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <costStuffCount>50</costStuffCount>
        <statBases>
          <WorkToMake>10000</WorkToMake>
          <Mass>1.2</Mass>
        </statBases>
        <equippedStatOffsets>
          <PlantWorkSpeed>0.15</PlantWorkSpeed>
          <PlantHarvestYield>0.15</PlantHarvestYield>
        </equippedStatOffsets>
        <tools>
          <li>
            <label>handle</label>
            <capacities>
              <li>Cut</li>
            </capacities>
            <power>4</power>
            <cooldownTime>1</cooldownTime>
          </li>
          <li>
            <label>edge</label>
            <capacities>
              <li>Cut</li>
            </capacities>
            <power>18</power>
            <cooldownTime>2.5</cooldownTime>
          </li>
        </tools>
      </ThingDef>

      <ThingDef ParentName="BaseTool_Forged_Quality">
        <defName>Tool_Pickaxe</defName>
        <label>pickaxe</label>
        <description>Used to efficiently mine ores.</description>
        <graphicData>
          <texPath>Tools/Pickaxe</texPath>
          <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <costStuffCount>50</costStuffCount>
        <statBases>
          <WorkToMake>10000</WorkToMake>
          <Mass>1.2</Mass>
        </statBases>
        <equippedStatOffsets>
          <MiningSpeed>0.15</MiningSpeed>
          <MiningYield>0.15</MiningYield>
        </equippedStatOffsets>
        <tools>
          <li>
            <label>handle</label>
            <capacities>
              <li>Stab</li>
            </capacities>
            <power>4</power>
            <cooldownTime>1</cooldownTime>
          </li>
          <li>
            <label>edge</label>
            <capacities>
              <li>Stab</li>
            </capacities>
            <power>18</power>
            <cooldownTime>2.5</cooldownTime>
          </li>
        </tools>
      </ThingDef>
</Defs>
